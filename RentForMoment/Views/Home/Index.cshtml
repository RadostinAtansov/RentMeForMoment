@model IndexViewModel

@{
    ViewData["Title"] = "Welcome";
}

@{
    var profiles = Model.Profiles;
    var firstProfile = profiles.Any() ? profiles[0] : null;
    var secondProfile = profiles.Count() > 1 ? profiles[1] : null;
    var thirdProfile = profiles.Count() > 2 ? profiles[2] : null;
}

@if (!profiles.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Hello, world!Welcome to the best site for rentforthemoment</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a asp-controller="PersonProfiles" asp-action="Add"></a>
        </p>
    </div>  
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
     <div class="carousel-inner">
         @if (firstProfile != null)
         {
             <div class="carousel-item active">
                 <img class="d-block w-100" src="@firstProfile.Image" alt="@firstProfile.Firstname">
                 <div class="carousel-caption d-none d-md-block">
                     <h5><a asp-controller="PersonProfiles" asp-action="Details" asp-route-id="@firstProfile">@firstProfile.Firstname @firstProfile.Lastname @firstProfile.Age @firstProfile.City @firstProfile.Skills</a></h5>
                 </div>
             </div>
         }
         @if (secondProfile != null)
         {
             <div class="carousel-item">
                 <img class="d-block w-100" src="@secondProfile.Image" alt="@secondProfile.Firstname">
                 <div class="carousel-caption d-none d-md-block">
                     <h5><a asp-controller="PersonProfiles" asp-action="Details" asp-route-id="@secondProfile">@secondProfile.Firstname @secondProfile.Lastname @secondProfile.Age @secondProfile.City @secondProfile.Skills</a></h5>
                 </div>
             </div>
         }
         @if (thirdProfile != null)
         {
             <div class="carousel-item">
                 <img class="d-block w-100" src="@thirdProfile.Image" alt="@thirdProfile.Firstname">
                 <div class="carousel-caption d-none d-md-block">
                     <h5><a asp-controller="PersonProfiles" asp-action="Details" asp-route-id="@thirdProfile">@thirdProfile.Firstname @thirdProfile.Lastname @secondProfile.Age @thirdProfile.City @thirdProfile.Skills</a></h5>
                 </div>
             </div>
         }
</div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4 text-center">
            <h2>@Model.TotalProfiles Profiles</h2>
        </div>
        <div class="col-md-4 text-center">
            <h2>@Model.TotalUsers Users</h2>
        </div>
        <div class="col-md-4 text-center">
            <h2>@Model.TotalRentForWork RentedForWork</h2>
        </div>
    </div>
</div>